<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.tripinfo.repository.MemberMapper">
    <insert id="memberRegister">
        INSERT INTO member(member_id,member_password,member_nickname)
        VALUES (#{member_id},#{member_password},#{member_nickname})
    </insert>

    <select id="loginCheck" resultType="int">
       SELECT count(1) FROM member where member_id = #{member_id} and member_password =  #{member_password}
    </select>
    <select id="idCheck" parameterType="String" resultType="java.lang.Integer">
        SELECT count(1) FROM member where member_id = #{member_id}
    </select>
</mapper>